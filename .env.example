# ========================================
# Virtual Cafe - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it contains secrets!)

# ========================================
# Django Core Settings
# ========================================

# Secret key for Django (generate a new one for production)
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-your-secret-key-change-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=*

# ========================================
# Database Settings
# ========================================

# Choose your database: Set ONE to True, others to False
# USE_MYSQL=True      -> Use MySQL database
# USE_POSTGRES=True   -> Use PostgreSQL database  
# Both False          -> Use SQLite (default, no setup needed)

USE_MYSQL=False
USE_POSTGRES=False

# MySQL credentials (only used when USE_MYSQL=True)
# Default MySQL port: 3306
# Create database: CREATE DATABASE virtualcafe_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# Create user: CREATE USER 'virtualcafe_user'@'localhost' IDENTIFIED BY 'your_password';
# Grant privileges: GRANT ALL PRIVILEGES ON virtualcafe_db.* TO 'virtualcafe_user'@'localhost';

# PostgreSQL credentials (only used when USE_POSTGRES=True)
# Default PostgreSQL port: 5432

# Common database credentials (used by MySQL or PostgreSQL)
DB_NAME=virtualcafe_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# ========================================
# Redis Settings (for Django Channels)
# ========================================

# Redis URL for channel layer
# Default: redis://127.0.0.1:6379
REDIS_URL=redis://127.0.0.1:6379

# ========================================
# Chatbot Settings (Gemini AI)
# ========================================

# Google Gemini API Key for chatbot functionality
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
